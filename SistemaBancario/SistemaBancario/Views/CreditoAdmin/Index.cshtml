<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <title>Practica No.3</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/posicion.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" /> 
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <button class="navbar-toggler d-lg-none" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarsExampleDefault">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("Index", "Index")">Inicio <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("IndexAcerca", "Acerca")">Acerca de...</a>
                    </li>
                </ul>
                <form class="form-inline mt-2 mt-md-0" action="@Url.Action("Index", "Login")">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Iniciar Sesión</button>
                </form>
                <form class="form-inline mt-4 mt-md-0" action="@Url.Action("Index", "Registrar")">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Registrarse</button>
                </form>
            </div>
        </nav>
    </header>
    <main role="main" class="col-sm-9 ml-sm-auto col-md-10 pt-3">
        <div class="container-fluid">
            <div class="row">
                <nav class="col-sm-3 col-md-2 d-none d-sm-block bg-light sidebar">
                    <ul class="nav nav-pills flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="#">Menu <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "CreditoAdmin")">Solicitudes de Crédito</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Debito")">Realizar Débito</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
        <div class="jumbotron">
            <h1 class="display-4">Solicitudes de Crédito</h1>
        </div>
        <p>
            <button id="btnAceptar" type="button" class="btn btn-outline-primary">Aceptar</button>
            <button id="btnRechazar" type="button" class="btn btn-outline-danger">Rechazar</button>
        </p>
        <div class="table-responsive">
            <table name="tbl" class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Número de Cuenta</th>
                        <th>Descripción</th>
                        <th>Monto</th>
                        <th>Seleccionar</th>
                    </tr>
                </thead>
                <tbody id="datos"></tbody>
            </table>
        </div>
    </main>
    <div class="modal fade" id="formularioAceptar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Aceptar solicitud</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="formAceptar" method="post">
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label">¿Desea aceptar la solicitud?</label>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-primary" value="aceptar" name="_aceptar">Aceptar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="formularioRechazar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Rechazar solicitud</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="formRechazar" method="post">
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label">¿Desea rechazar la solicitud?</label>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-danger" value="rechazar" name="_rechazar">Rechazar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- FOOTER -->
    <footer class="container">
        <p class="float-right"><a href="#">Back to top</a></p>
        <p>&copy; 2019 Sistema Bancario, Inc. &middot; <a href="#">Privacy</a> &middot; <a href="#">Terms</a></p>
    </footer>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    
    <script type="text/javascript">

        $('#btnAceptar').on("click", function () {
            parametro = '';
            $('#chkLista:checked').each(function () {
                parametro = parametro + $(this).val() + '/';
            });
            if (parametro) {
                $('#formularioEliminar').modal('show');
            }
            else {
                alert("Para eliminar un registro debe seleccionarlo!");
            }
        });

        $('#formAceptar').on("submit", function (event) {
            console.log(parametro);
            $('#formularioEliminar').modal('hide');
            $.ajax({
                url: "/marca/eliminar/",
                data: { 'id': parametro },
                datatype: 'json',
                error: function () { alert('Error al llamar a la vista') },
                success: function (datos) {
                    imprimirDatos(datos);
                }
            });
            event.preventDefault();
        });

        $('#formRechazar').on("submit", function (event) {
            console.log(parametro);
            $('#formularioEliminar').modal('hide');
            $.ajax({
                url: "/marca/eliminar/",
                data: { 'id': parametro },
                datatype: 'json',
                error: function () { alert('Error al llamar a la vista') },
                success: function (datos) {
                    imprimirDatos(datos);
                }
            });
            event.preventDefault();
        });

        $('#btnRechazar').on("click", function () {
            parametro = '';
            $('#chkLista:checked').each(function () {
                parametro = parametro + $(this).val() + '/';
            });
            if (parametro) {
                $('#formularioEliminar').modal('show');
            }
            else {
                alert("Para eliminar un registro debe seleccionarlo!");
            }
        });
    </script>
    
    
</body>
</html>
